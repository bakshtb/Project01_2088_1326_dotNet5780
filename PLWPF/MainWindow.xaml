<Window x:Class="PLWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PLWPF"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="תוכנה לניהול והתאמת נופש " Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Image Stretch="Fill" Source="/Pictures/background.png" Grid.RowSpan="3" Margin="0,86,0,10" HorizontalAlignment="Center" Width="380"/>
        <Button x:Name="btnGuestRequest" Content="דרישות לקוח" Grid.Column="1" Margin="48,40,48,41" Grid.Row="0" Click="btnGuestRequest_Click" />
        <Button x:Name="btnHostingUnit" Content="יחידת אירוח" Grid.Column="1" Margin="48,40,48,41" Grid.Row="1" Click="btnHostingUnit_Click"/>
        <Button x:Name="btnAdmin" Content="מנהל האתר" Grid.Column="1" Margin="48,40,48,41" Grid.Row="2" Click="btnAdmin_Click"/>

    </Grid>
</Window>
