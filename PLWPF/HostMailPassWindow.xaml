<Window x:Class="PLWPF.HostMailPassWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PLWPF"
        mc:Ignorable="d"
        Title="HostMailPassWindow" Height="112" Width="404">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="49*"/>
            <RowDefinition Height="47*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="הכנס את הסיסמה של המייל שלך:" TextWrapping="Wrap" FlowDirection="RightToLeft" Width="194" Height="17" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Column="1"/>
        <PasswordBox x:Name="psbHostMailPass" Width="190" KeyDown="psbHostMailPass_KeyDown" HorizontalAlignment="Center" Height="17" VerticalAlignment="Center"/>
        <Button Content="אישור" Click="Button_Click" Height="20" VerticalAlignment="Center" HorizontalAlignment="Center" Width="190" Grid.Row="1"/>
    </Grid>
</Window>
