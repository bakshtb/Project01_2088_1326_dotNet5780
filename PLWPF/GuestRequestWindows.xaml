<Window x:Class="PLWPF.GuestRequestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"        
        xmlns:local="clr-namespace:PLWPF"        
        
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="GuestRequestWindow" Height="615" Width="742.2">

    <Grid x:Name="GuestRequestGrid" Height="572.4" Width="742.2" VerticalAlignment="Center" HorizontalAlignment="Center">
        <Grid.Background>
            <ImageBrush ImageSource="/Pictures/back1.png"/>
        </Grid.Background>
        <Grid.RowDefinitions>

            <RowDefinition Height="183*"/>
            <RowDefinition Height="36*"/>
            <RowDefinition Height="27*"/>
            <RowDefinition Height="37*"/>
            <RowDefinition Height="27*"/>
            <RowDefinition Height="154*"/>
            <RowDefinition Height="108*"/>

        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>

            <ColumnDefinition Width="77*"/>
            <ColumnDefinition Width="80*"/>
            <ColumnDefinition Width="19*"/>
            <ColumnDefinition Width="85*"/>
            <ColumnDefinition Width="18*"/>
            <ColumnDefinition Width="87*"/>
            <ColumnDefinition Width="13*"/>
            <ColumnDefinition Width="85*"/>
            <ColumnDefinition Width="17*"/>
            <ColumnDefinition Width="87*"/>
            <ColumnDefinition Width="17*"/>
            <ColumnDefinition Width="84*"/>
            <ColumnDefinition Width="73*"/>

        </Grid.ColumnDefinitions>
        <TextBox Text="{Binding PrivateName}" TextWrapping="Wrap" Background="{x:Null}" BorderBrush="{x:Null}" FlowDirection="RightToLeft" Padding="10,1,10,0" FontSize="16" BorderThickness="0,0,0,0" RenderTransformOrigin="0.5,0.5" Grid.Column="8" HorizontalAlignment="Left" Width="192" VerticalAlignment="Center" Height="36" Grid.Row="1" Grid.ColumnSpan="4" Margin="13,6,0,0"/>
        <TextBox HorizontalAlignment="Right" Text="{Binding FamilyName}" TextWrapping="Wrap" VerticalAlignment="Center" Width="184" Height="36" Background="{x:Null}" BorderBrush="{x:Null}" FlowDirection="RightToLeft" Padding="10,1,10,0" FontSize="16" BorderThickness="0,0,0,0" Grid.Row="1" Grid.Column="5" Grid.ColumnSpan="4" Margin="0,6,16,0"/>
        <TextBox Text="{Binding Adults}" HorizontalAlignment="Center"  TextWrapping="Wrap" VerticalAlignment="Center" Width="86" Height="37" Background="{x:Null}" BorderBrush="{x:Null}" FlowDirection="RightToLeft" FontSize="16" BorderThickness="0,0,0,0" Grid.Row="3" Grid.Column="11" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <TextBox  Text="{Binding Children}" HorizontalAlignment="Center"  TextWrapping="Wrap" VerticalAlignment="Center" Width="90" Height="37" Background="{x:Null}" BorderBrush="{x:Null}" FlowDirection="RightToLeft" FontSize="16" BorderThickness="0,0,0,0" Grid.Row="3" Grid.Column="9" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
        <TextBox HorizontalAlignment="Right" Text="{Binding MailAddress}"  TextWrapping="Wrap" VerticalAlignment="Center" Width="182" Height="36" Background="{x:Null}" BorderBrush="{x:Null}" FlowDirection="LeftToRight" Padding="10,1,10,0" FontSize="16" BorderThickness="0,0,0,0" Grid.Row="1" Grid.ColumnSpan="4" Margin="0,6,3,0"/>
        <ListBox x:Name="lsvArea" SelectedIndex="{Binding AreaEnum}"  BorderBrush="{x:Null}" Background="{x:Null}" FlowDirection="RightToLeft" HorizontalAlignment="Center" Width="92" Padding="6,15,4,0" ScrollViewer.CanContentScroll="False" VerticalAlignment="Center" Height="154" Grid.Row="5" Grid.Column="11"/>
        <ListBox x:Name="lsvType" SelectedIndex="{Binding Type}" BorderBrush="{x:Null}" Background="{x:Null}" FlowDirection="RightToLeft" HorizontalAlignment="Center" Width="89" Padding="10,15,10,0" ScrollViewer.CanContentScroll="False" Grid.Row="4" Grid.Column="9" Grid.RowSpan="2" Height="154" VerticalAlignment="Top" Margin="0,27,0,0"/>
        <ListBox x:Name="lsvGarden" SelectedIndex="{Binding Garden}" BorderBrush="{x:Null}" Background="{x:Null}" FlowDirection="RightToLeft" HorizontalAlignment="Center" Width="85" Padding="10,15,10,0" ScrollViewer.CanContentScroll="False" VerticalAlignment="Center" Height="154" Grid.Row="5" Grid.Column="3"/>
        <ListBox x:Name="lsvPool" SelectedIndex="{Binding Pool}" BorderBrush="{x:Null}" Background="{x:Null}" FlowDirection="RightToLeft" Padding="10,15,10,0" ScrollViewer.CanContentScroll="False" VerticalAlignment="Center" Height="154" Grid.Row="5" Grid.Column="7" HorizontalAlignment="Center" Width="85"/>
        <ListBox  x:Name="lsvJacuzzi" SelectedIndex="{Binding Jacuzzi}" BorderBrush="{x:Null}" Background="{x:Null}" FlowDirection="RightToLeft" HorizontalAlignment="Center" Width="85" Padding="10,15,10,0" ScrollViewer.CanContentScroll="False" VerticalAlignment="Center" Height="154" Grid.Row="5" Grid.Column="5"/>
        <ListBox x:Name="lsvChildrensAttractions" SelectedIndex="{Binding ChildrensAttractions}" BorderBrush="{x:Null}" Background="{x:Null}" FlowDirection="RightToLeft" HorizontalAlignment="Center" Width="85" Padding="10,15,10,0" ScrollViewer.CanContentScroll="False" VerticalAlignment="Center" Height="154" Grid.Row="5" Grid.Column="1"/>
        <DatePicker x:Name="dpEntryDate" SelectedDate="{Binding EntryDate, Mode=OneWayToSource}" Validation.ErrorTemplate="{x:Null}" HorizontalAlignment="Left" VerticalAlignment="Center" Width="184" BorderBrush="{x:Null}" FlowDirection="LeftToRight" Padding="10,8,8,0" Height="37" Grid.Row="3" Grid.ColumnSpan="4" Margin="77,0,0,0"/>
        <DatePicker x:Name="dpReleaseDate" SelectedDate="{Binding ReleaseDate, Mode=OneWayToSource}" Validation.ErrorTemplate="{x:Null}" HorizontalAlignment="Center" VerticalAlignment="Center" Width="183" BorderBrush="{x:Null}" FlowDirection="LeftToRight" Padding="10,8,8,0" Height="37" BorderThickness="0,0,0,0" Grid.Row="3" Grid.Column="5" Grid.ColumnSpan="3"/>

        <Button x:Name="btnAdd" Content="הגש" HorizontalAlignment="Center" Margin="0,18,0,0" VerticalAlignment="Top" Height="60" Width="140" BorderBrush="{x:Null}" Foreground="White" BorderThickness="0,0,0,0" FlowDirection="RightToLeft" FontSize="16" Click="btnAdd_Click_1" Grid.Row="6" Grid.Column="1">
            <Button.Background>
                <ImageBrush ImageSource="/Pictures/Button.png"/>
            </Button.Background>
        </Button>
        <Grid Grid.Column="6" Grid.ColumnSpan="6" Margin="13,22,0,0">
            <TextBlock HorizontalAlignment="Center" Margin="0,86,0,0" Text="הוספת בקשת לקוח" TextWrapping="Wrap" VerticalAlignment="Top" Width="270" Height="40" FlowDirection="RightToLeft" FontSize="22"/>
            <Image HorizontalAlignment="Left" Height="62" Margin="219,20,0,0" VerticalAlignment="Top" Width="61" Source="Pictures/request (2).png"/>
        </Grid>


    </Grid>




